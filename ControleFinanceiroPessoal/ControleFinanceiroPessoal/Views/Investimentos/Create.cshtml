@model ControleFinanceiroPessoal.Models.Investimento

@{
    ViewData["Title"] = "Novo Investimento";
}

<div class="container mt-5">
    <h1 class="text-center text-success">Novo Investimento</h1>
    <hr />

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-4">
            <label asp-for="IdCategoriaInvestimento" class="form-label">Categoria do Investimento</label>
            <select asp-for="IdCategoriaInvestimento" class="form-select">
                <option value="">Selecione uma Categoria</option>
                @foreach (var categoria in ViewBag.Categorias)
                {
                    <option value="@categoria.IdCategoriaInvestimento">
                        @categoria.NomeCompleto
                    </option>
                }
            </select>
            <span asp-validation-for="IdCategoriaInvestimento" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="ValorInvestido" class="form-label">Valor Investido</label>
            <input asp-for="ValorInvestido" class="form-control" />
            <span asp-validation-for="ValorInvestido" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DataInvestimento" class="form-label">Data do Investimento</label>
            <input asp-for="DataInvestimento" type="date" class="form-control" />
            <span asp-validation-for="DataInvestimento" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Salvar Investimento</button>
    </form>
</div>
